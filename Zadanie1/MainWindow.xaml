<Window x:Class="Zadanie1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zadanie1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Выберите номер действия:" FontSize="30"/>
        <TextBox x:Name="DEISTVIE" Grid.Column="1"/>
        <TextBlock Text="A: " Grid.Row="1" FontSize="40"/>
        <TextBox x:Name="A" Grid.Column="1" Grid.Row="1"/>
        <TextBlock Text="B: " Grid.Row="2" FontSize="40"/>
        <TextBox x:Name="B" Grid.Column="1" Grid.Row="2"/>
        <Button Click="Button_Click" Grid.Row="3" Grid.ColumnSpan="2" Content="OK"/>
        <TextBlock x:Name="OTV" Grid.Row="4" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
