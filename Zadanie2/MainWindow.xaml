<Window x:Class="Zadanie2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zadanie2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="N: " Grid.Row="0" FontSize="40"/>
        <TextBox x:Name="N" Grid.Column="1" Grid.Row="0"/>
        <TextBlock Text="M: " Grid.Row="1" FontSize="40"/>
        <TextBox x:Name="M" Grid.Column="1" Grid.Row="1"/>
        <Button Click="Button_Click" Grid.Row="2" Grid.ColumnSpan="2" Content="OK"/>
        <TextBlock x:Name="OTV" Grid.Row="3" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
